<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!-- mybatis逆向工程所需的配置文件 -->

<generatorConfiguration>

    <!-- mysql jar 文件位置 -->
    <classPathEntry
            location="D:\apache-maven-3.6.1\repository\mysql\mysql-connector-java\5.1.30\mysql-connector-java-5.1.30.jar"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 是否去除所有自动生成的文件的时间戳，默认为false -->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 配置数据库连接信息，连接哪一个数据库 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://39.96.165.58:3306/vehicle"
                        userId="root"
                        password="12345678">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 指定javabean生成的位置 -->
        <!-- targetPackage:包名称(自定义)  targetProject：项目路径(自定义)   -->
        <javaModelGenerator
                targetPackage="com.it.vehicle.entity"
                targetProject="src\main\java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 配置生成相应的实体Mapper.xml，对于Mapper3.X我们需要把type="XMLMAPPER" -->
        <!-- targetPackage:包名称(自定义)  targetProject：项目路径(自定义)   -->
        <sqlMapGenerator
                targetPackage="mapper"
                targetProject="src\main\resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- 配置生成相应的接口类，对应与Mapper.xml中的一系列CRUD方法SQL语句 -->
        <!-- targetPackage:包名称(自定义)  targetProject：项目路径(自定义)   -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.it.vehicle.mapper"
                             targetProject="src\main\java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- table标签指定每个表的生成策略 -->
        <!--        <table tableName="admin" domainObjectName="Admin"/>-->
        <!--        <table tableName="driver" domainObjectName="Driver"/>-->
        <!--        <table tableName="truck" domainObjectName="Truck"/>-->
<!--                <table tableName="goods_order" domainObjectName="GoodsOrder"/>-->
        <!--        <table tableName="location" domainObjectName="Location"/>-->
<!--                <table tableName="transport" domainObjectName="Transport"/>-->
        <table tableName="signing" domainObjectName="Signing"/>


    </context>
</generatorConfiguration>